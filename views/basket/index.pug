extends ./../partials/header
block main
  input.display-none#total-price(type="text" value=totalPrice)
  input.display-none#products(type="text" value=JSON.stringify(products))
  .main-inner-wrapper
    if products.length
      .main-header
        .main-title-wrapper
          span.main-title Alışveriş Sepetim
          span.main-info İstemediğiniz ürünleri sepetinizden çıkarın ve siparişinizi tamamlayın.
        a.finish-button(href="/buy") Siparişi Tamamla
      .products-wrapper
        each product in products
          .each-product(id=product._id)
            .each-product-image-wrapper
              .each-product-image-inner-wrapper
                img.product-image(src=product.productPhotoArray[0])
            span.product-name #{product.number} adet #{product.name}
            span.product-price #{parseFloat(product.price) * parseFloat(product.number)} ₺/#{product.type}
            i.fas.fa-trash.remove-button
    else
      .main-header
        .main-title-wrapper
          span.main-title Alışveriş Sepetim
          span.main-info Sepetinizde hiçbir ürün bulunmuyor.
