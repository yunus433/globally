extends ./../partials/header
block main
  if category == "Tüm Ürünler" && !keywords
    .notifications-wrapper
      .each-notification
        .notification-content
          span.notification-title Globally Web Sitesi Kuruldu!
          span.notification-description En yeni indirimler ve teklifler Globally Web Sitesinde
        .notification-image-wrapper
          img.notification-image(src="https://cdn.lynda.com/course/82409/82409-636282992381780999-16x9.jpg")
  .products-wrapper
    span.products-title= category
    if keywords
      span.keywords-title "#{keywords}" araması için bulunan ürünler
    .products-inner-wrapper
      each product in products
        .each-product(id=product._id)
          .each-product-image-wrapper
            .each-product-image-inner-wrapper
              img.product-image(src=product.productPhotoArray[0])
          span.product-name #{product.name}
          span.product-description #{product.description}
          span.product-price #{product.price}₺
          if (!basket.includes(product._id.toString()))
            .add-to-basket-button(id=product._id) Sepete Ekle
          else
            .remove-from-basket-button(id=product._id) Sepetten Çıkar
